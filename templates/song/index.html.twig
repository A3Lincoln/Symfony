{% extends 'base.html.twig' %}

{% block title %}Songs{% endblock %}

{% block body %}
    <h1>Songs</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Length</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.name }}</td>
                <td>
                    {% for g in song.genre %}
                    {{ g.name}} <br>
                {% endfor %}
                </td>
                <td>{{ song.length |date('H:i:s')}}</td>
                <td>
                    <a href="{{ path('song_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('song_new', {'album_id': album_id}) }}">Create new</a>
{% endblock %}
