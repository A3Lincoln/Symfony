{% extends 'base.html.twig' %}

{% block title %}Songs by artist{% endblock %}

{% block body %}
    <h1>Songs</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Length</th>

        </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.name }}</td>
                <td>
                    {% for g in song.genre %}
                        {{ g.name}} <br>
                    {% endfor %}
                </td>
                <td>{{ song.length |date('H:i:s')}}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
